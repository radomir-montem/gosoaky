<div class="go-section-faq">
  <div class="go-container-faq">
    <h2 class="go-h2-title">{{ section.settings.title }}</h2>
    <p class="go-paragraph">
      {{ section.settings.description }}
    </p>
    <div class="go-faq-wrapper">
      {% for block in section.blocks %}
        {% assign question = block.settings.question %}
        {% assign answer = block.settings.answer %}
        {% case block.type %}
          {% when 'question' %}
            {% if question != blank and answer != blank %}
              <div class="go-faq-item">
                <div class="go-faq-trigger">
                  <h3 class="go-h3-faq-title">{{ question }}</h3>
                  <div class="go-trigger-icon">
                    <img
                      width="24"
                      height="24"
                      alt=""
                      src="https://cdn.prod.website-files.com/62fa3062c203be10ec3b25e5/666310232c5afc4f05f94d48_Group%206.svg"
                      loading="lazy"
                      class="go-faq-open-close-icon"
                      style="transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;"
                    >
                  </div>
                </div>
                <div class="go-faq-content" style="height: 0px; opacity: 0;">
                  <div class="go-paragraph">
                    {{ answer }}
                  </div>
                </div>
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'buttons' %}
            <div class="go-button-wrapper">
              {% if block.settings.button_text1 != blank and block.settings.button_link1 != blank %}
                <a href="{{ block.settings.button_link1 }}" class="go-button-large go-dark w-button {{ block.settings.button_1_style }}">{{ block.settings.button_text1 }}</a>
              {% endif %}
              {% if block.settings.button_text2 != blank and block.settings.button_link2 != blank %}
                <a href="{{ block.settings.button_link2 }}" class="go-button-large go-dark w-button {{ block.settings.button_2_style }}">{{ block.settings.button_text2 }}</a>
              {% endif %}
            </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "go faq",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "section title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque pharetra sodales justo non auctor. Etiam eu faucibus leo, at tincidunt velit. Ut non tristique dolor, et porttitor odio. Phasellus eget interdum mi."
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Question",
      "limit": 10,
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons",
      "limit": 1,
      "settings": [
        
        {
          "type": "text",
          "id": "button_text1",
          "label": "Button Text",
          "default": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link1",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_1_style",
          "label": "first button style",
          "default": "go-light",
          "options": [
            {
              "value": "go-light",
              "label": "Light"
            },
            {
              "value": "go-dark",
              "label": "Dark"
            }
          ]
        },
        {
          "type": "text",
          "id": "button_text2",
          "label": "Button Text",
          "default": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link2",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_2_style",
          "label": "Second button style",
          "default": "go-light",
          "options": [
            {
              "value": "go-light",
              "label": "Light"
            },
            {
              "value": "go-dark",
              "label": "Dark"
            }
          ]
        }

      ]
    }
  ],
  "presets": [
    {
      "name": "go faq"
    }
  ]
}
{% endschema %}
