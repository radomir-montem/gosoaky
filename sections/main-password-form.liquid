<style>
      .text-block {
          margin-top:32px;

          margin-bottom: 0px;
          font-family: proxima-nova, sans-serif;
          color: #fff;
          font-size: 16px;
          line-height: 24px;
          font-weight: 700;
          text-align: center;
      }

  .go-section-password {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
      -ms-flex-pack: center;
      justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
      -ms-flex-align: center;
      align-items: center;
      width:100%;
      margin-bottom:24px;
  }

  .password-form{
  margin:0px !important;
  }
  .go-password-block {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      width: 100%;
      max-width: 600px;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
      -ms-flex-direction: column;
      flex-direction: column;
      -webkit-box-align: stretch;
      -webkit-align-items: stretch;
      -ms-flex-align: stretch;
      align-items: stretch;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
      -ms-flex: 1;
      flex: 1;
  }

  .go-access-text-fields {
      width:100%;
      height: 54px;
      border-style: solid;
      border-width: 1px;
      border-color: #fff;
      background-color: hsla(0, 0%, 100%, 0);
      font-family: proxima-nova, sans-serif;
      color: #fff;
      margin-bottom:8px;
      font-size:16px;
      font-weight:500;
      border-radius:0px;

  }
  form{
  margin-top: 16px;
  }
  .go-access-text-fields::placeholder {
      color:white;
      opacity:1;
      font-size:16px;
      font-weight:500;

  }
  .go-access-button {
      display: block;
      width: 100%;
      height: 54px;
      padding-top: 0px;
      padding-bottom: 0px;
      background-color: #fff200;
      font-family: proxima-nova, sans-serif;
      color: #000;
      font-size: 16px;
      line-height: 28px;
      font-weight: 700;
      margin:0px;
  }

  .password-field{
      border:0px;
  }

  .field{
  border:0px;
  }
  .go-textfield-div{
  width:100%;

  }

  #shopify-section-main-password-form{
  width:100%;
  margin:8px;
  }
</style>

<div class="go-section-password">
  <div class="go-password-block">
    {%- form 'storefront_password', class: 'password-form' -%}
      <div class="go-textfield-div{% if form.errors %} password-field--error{% endif %}">
        <input
          type="password"
          name="password"
          id="Password"
          class="go-access-text-fields w-input"
          autocomplete="current-password"
          {% comment %}
             {% if form.errors %}
              aria-invalid="true"
              aria-describedby="PasswordLoginForm-password-error"
            {%- endif -%}
          {% endcomment %}
          placeholder="ENTER YOUR ACCESS CODE"
        >
        {% comment %}
           <label class="field__label" for="{{ 'general.password_page.login_form_password_label' | t }}">
            {{- 'general.password_page.login_form_password_placeholder' | t -}}
          </label>
        {% endcomment %}
        {%- if form.errors -%}
          <div id="PasswordLoginForm-password-error" role="status">
            <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
            <span class="form__message">
              {%- render 'icon-error' %}
              {{ 'general.password_page.login_form_error' | t -}}
            </span>
          </div>
        {%- endif -%}
      </div>
      <button name="commit" class="go-access-button w-button password-button button button--outline">
        GET ACCESS NOW
      </button>
    {%- endform -%}
  </div>
</div>

